/* Pages/computer/computer.wxss */
.content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  background-color: #ccc;
  font-family: "Microsoft YaHei";
  overflow: hidden;
}
.layout-top{
  width: 100%;
  margin-bottom: 30rpx;
}
.screen{
  text-align: right;
  vertical-align: buttom;
  width: 100%;
  line-height: 400rpx;
  padding: 0 10rpx;
  font-weight: bold;
  font-size: 60px;
  box-sizing: border-box;
  border-top: 1px solid #fff;
}
.layout-bottom{
  width: 100%;
}
.btnGroup{
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height:4rem;
  background-color: #fff;
}
.item{
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  margin-top: 1px;
  margin-right: 1px;
}
.zero{
  width: 50%;
}
.orange{
  color: #fef4e9;
  background: #f78d1d;
  font-weight: bold;
}
.blue{
  color: #d9eef7;
  background-color: #0095cd;
}